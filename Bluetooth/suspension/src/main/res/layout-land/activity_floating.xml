<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px77"
        android:paddingLeft="@dimen/px60"
        android:paddingTop="@dimen/px10">

        <TextView
            style="@style/txt_normal_px22"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="悬浮开关" />

        <com.ancar.suspension.widget.SwitchButton
            android:id="@+id/iv_float_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px40" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:layout_marginLeft="@dimen/px32"
        android:layout_marginRight="@dimen/px32"
        android:background="@drawable/lin_bt_dail" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/iv_sus_bg_left"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_sus_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px10"
                android:background="@drawable/sus_del_selector" />

            <ImageView
                android:id="@+id/sus_voice_add_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px110"
                android:background="@drawable/sus_voice_add_selector_left" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sus_power_selector" />


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>