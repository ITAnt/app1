<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--textview默认设置-->
    <style name="txt_default">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:lineSpacingExtra">4px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">start</item>
    </style>
    <!--textview提示语默认设置-->
    <style name="txt_default_tip">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:lineSpacingExtra">4px</item>
        <item name="android:textColor">@color/tipColor</item>
        <item name="android:ellipsize">start</item>
    </style>
    <!--textview 小屏语默认设置-->
    <style name="txt_default_black">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:lineSpacingExtra">4px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">start</item>
    </style>

    <style name="txt_px16" parent="txt_default">
        <item name="android:textSize">@dimen/px16</item>
    </style>

    <style name="txt_tip_px16" parent="txt_default_tip">
        <item name="android:textSize">@dimen/px16</item>
    </style>


    <style name="txt_px18" parent="txt_default">
        <item name="android:textSize">@dimen/px18</item>
    </style>

    <style name="txt_tip_18" parent="txt_default_tip">
        <item name="android:textSize">@dimen/px18</item>
    </style>


    <style name="txt_px20" parent="txt_default">
        <item name="android:textSize">@dimen/px20</item>
    </style>

    <style name="txt_tip_20" parent="txt_default_tip">
        <item name="android:textSize">@dimen/px20</item>
    </style>

    <style name="txt_black_20" parent="txt_default_black">
        <item name="android:textSize">@dimen/px20</item>
    </style>

    <style name="txt_normal_px22" parent="txt_default">
        <item name="android:textSize">@dimen/px22</item>
    </style>

    <style name="txt_normal_tip_px22" parent="txt_default_tip">
        <item name="android:textSize">@dimen/px22</item>
    </style>
    <style name="txt_normal_px30" parent="txt_default">
        <item name="android:textSize">@dimen/px30</item>
    </style>



    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
    </style>

    <style name="Animation" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

</resources>
