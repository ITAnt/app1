<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <!--textview默认设置-->
    <style name="txt_default">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:lineSpacingExtra">4px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">start</item>
    </style>

    <style name="txt_marque">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:lineSpacingExtra">4px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    <!--textview提示语默认设置-->
    <style name="txt_default_tip">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:lineSpacingExtra">4px</item>
        <item name="android:textColor">@color/tipColor</item>
        <item name="android:ellipsize">start</item>
    </style>
    <!--textview 小屏语默认设置-->
    <style name="txt_default_black">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:lineSpacingExtra">4px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">start</item>
    </style>

    <style name="txt_px16" parent="txt_default">
        <item name="android:textSize">@dimen/px16</item>
    </style>

    <style name="txt_tip_px16" parent="txt_default_tip">
        <item name="android:textSize">@dimen/px16</item>
    </style>


    <style name="txt_px18" parent="txt_default">
        <item name="android:textSize">@dimen/px18</item>
    </style>

    <style name="txt_tip_18" parent="txt_default_tip">
        <item name="android:textSize">@dimen/px18</item>
    </style>


    <style name="txt_px20" parent="txt_default">
        <item name="android:textSize">@dimen/px20</item>
    </style>

    <style name="txt_tip_20" parent="txt_default_tip">
        <item name="android:textSize">@dimen/px20</item>
    </style>

    <style name="txt_black_20" parent="txt_default_black">
        <item name="android:textSize">@dimen/px20</item>
    </style>

    <style name="txt_normal_px22" parent="txt_default">
        <item name="android:textSize">@dimen/px22</item>
    </style>

    <style name="txt_normal_px28" parent="txt_default">
        <item name="android:textSize">@dimen/px28</item>
    </style>

    <style name="txt_normal_tip_px22" parent="txt_default_tip">
        <item name="android:textSize">@dimen/px22</item>
    </style>

    <style name="txt_normal_px26" parent="txt_default">
        <item name="android:textSize">@dimen/px26</item>
    </style>

    <style name="txt_normal_px30" parent="txt_marque">
        <item name="android:textSize">@dimen/px30</item>
    </style>


    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
    </style>

    <style name="Animation" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <style name="main_activity_tab_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">18px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@null</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">60px</item>
        <item name="maxWidth">60px</item>
        <item name="minHeight">60px</item>
        <item name="maxHeight">60px</item>
        <item name="indicatorName">BallSpinFadeLoaderIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

</resources>
