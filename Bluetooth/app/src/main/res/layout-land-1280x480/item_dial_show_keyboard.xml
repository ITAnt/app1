<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/px20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_dial_show_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px20"
            android:background="@drawable/dial_number_one_selector" />

        <ImageView
            android:id="@+id/item_dial_show_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px45"
            android:background="@drawable/dial_number_two_selector" />

        <ImageView
            android:id="@+id/item_dial_show_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px45"
            android:background="@drawable/dial_number_three_selector" />

        <ImageView
            android:id="@+id/item_dial_show_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px45"
            android:background="@drawable/dial_number_four_selector" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/item_dial_show_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px20"
            android:background="@drawable/dial_number_five_selector" />

        <ImageView
            android:id="@+id/item_dial_show_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px45"
            android:background="@drawable/dial_number_six_selector" />

        <ImageView
            android:id="@+id/item_dial_show_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px45"
            android:background="@drawable/dial_number_seven_selector" />

        <ImageView
            android:id="@+id/item_dial_show_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px45"
            android:background="@drawable/dial_number_eight_selector" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_dial_show_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px20"
            android:background="@drawable/dial_number_nine_selector" />

        <ImageView
            android:id="@+id/item_dial_show_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px45"
            android:background="@drawable/dial_number_ten_selector" />

        <ImageView
            android:id="@+id/item_dial_show_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px45"
            android:background="@drawable/dial_number_eleven_selector" />

        <ImageView
            android:id="@+id/item_dial_show_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px45"
            android:background="@drawable/dial_number_twelve_selector" />
    </LinearLayout>


</LinearLayout>