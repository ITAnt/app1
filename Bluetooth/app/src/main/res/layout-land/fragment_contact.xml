<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px60"
        android:layout_marginTop="@dimen/px10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px40">

        <ImageView
            android:id="@+id/iv_contanct_synchronous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginRight="@dimen/px30"
            android:background="@drawable/contact_synchronous_selector" />

        <EditText
            android:id="@+id/contact_search"
            style="@style/txt_normal_px22"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px65"
            android:layout_toLeftOf="@+id/iv_contanct_synchronous"
            android:background="@drawable/edit_search_bg"
            android:drawableLeft="@drawable/iv_contact_search_icon"
            android:hint="搜索"
            android:maxLines="1"
            android:paddingLeft="@dimen/px15"
            android:textColorHint="@color/tipColor" />

    </RelativeLayout>

    <include
        layout="@layout/item_syn_contact"
        android:visibility="gone" />

    <include
        layout="@layout/item_syn_contact_error"
        android:visibility="gone" />

    <include
        layout="@layout/item_syn_contact_ing"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_contact_empty"
        style="@style/txt_normal_tip_px22"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:text="联系人数据为空"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/rela_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px10">

        <com.jancar.bluetooth.widget.SideBar
            android:id="@+id/item_sidebar"
            android:layout_width="@dimen/px50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/px10"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px35"
            android:paddingBottom="@dimen/px3" />

        <ListView
            android:id="@+id/contact_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px10"
            android:layout_toLeftOf="@+id/item_sidebar"
            android:paddingLeft="@dimen/px50"
            tools:listitem="@layout/item_contact_list" />
    </RelativeLayout>


</LinearLayout>
