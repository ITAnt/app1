<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_contact_synchronous_bg"
    android:orientation="vertical">

    <TextView
        style="@style/txt_px18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="蓝牙未连接，是否需要连接蓝牙 ？" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_connect_dialog_yes"
            style="@style/txt_px18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_contact_synchronous_text"
            android:gravity="center"
            android:text="是" />


        <TextView
            android:id="@+id/tv_connect_dialog_no"
            style="@style/txt_px18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_contact_synchronous_text"
            android:gravity="center"
            android:text="否" />
    </LinearLayout>


</LinearLayout>