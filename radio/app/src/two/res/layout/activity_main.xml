<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_llayout"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px60"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px30"
                android:src="@drawable/bg_radio_arrow_left" />

            <ImageView
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px90"
                android:src="@drawable/bg_radio_arrow_right" />

            <com.jancar.radio.widget.cropView
                android:id="@+id/forever"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_alignBottom="@id/btn_right"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btn_right"
                android:layout_toRightOf="@id/btn_left"
                app:digital="108.20" />

            <FrameLayout
                android:id="@+id/fragme_frequency"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_below="@id/forever"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btn_right"
                android:layout_toRightOf="@id/btn_left">

                <com.jancar.radio.widget.cropView
                    android:id="@+id/forevers"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_below="@id/forever"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/btn_right"
                    android:layout_toRightOf="@id/btn_left"

                    app:digital="108.20"
                    app:isReflection="true" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_dialog_edts" />
            </FrameLayout>

            <TextView
                android:id="@+id/txt_band"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_left"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="50dp"
                android:layout_toEndOf="@+id/btn_left"
                android:text="@string/fm1"
                android:textColor="@color/white"
                android:textSize="25px" />


            <TextView
                android:id="@+id/txt_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragme_frequency"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-40px"
                android:layout_marginRight="150dp"
                android:text="@string/unit_mhz"
                android:textColor="@color/white"
                android:textSize="25px" />

            <ImageView
                android:id="@+id/Collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/forever"
                android:layout_alignParentRight="true"
                android:layout_marginRight="120dp"
                android:layout_marginBottom="@dimen/px60"
                android:src="@mipmap/ic_not_collected_n"
                android:text="@string/unit_mhz"
                android:textColor="@color/white"
                android:textSize="25px" />

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_tas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="130px"
                android:layout_toRightOf="@id/txt_band"
                android:text="@string/Ta"
                android:textColor="@color/rty_background_n"
                android:textSize="@dimen/px18" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_unit"
                android:layout_alignEnd="@+id/txt_band"
                android:text=""
                android:textColor="#fff"
                android:textSize="@dimen/px18" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <com.jancar.radio.widget.RuleView
                            android:id="@+id/gv_1_one"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            app:gv_b="false"
                            app:gv_currentValue="1051.2"
                            app:gv_d="false"
                            app:gv_gradationGap="14px"
                            app:gv_gradationUnit="30.6"
                            app:gv_longGradationLen="26px"
                            app:gv_maxValue="1693.8"
                            app:gv_minValue="439.2"
                            app:gv_numberPerCount="5"
                            app:gv_shortGradationLen="15px"
                            app:zjun_bgColor="#000"
                            app:zjun_textColor="#fff"
                            app:zjun_textSize="16px" />

                        <com.jancar.radio.widget.RuleView
                            android:id="@+id/gv_1_two"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            app:gv_b="false"
                            app:gv_currentValue="1043.6"
                            app:gv_d="true"
                            app:gv_gradationGap="14px"
                            app:gv_gradationUnit="30.6"
                            app:gv_longGradationLen="26px"
                            app:gv_maxValue="1681.2"
                            app:gv_minValue="430.2"
                            app:gv_numberPerCount="5"
                            app:gv_shortGradationLen="15px"
                            app:zjun_bgColor="#000"
                            app:zjun_textColor="#fff"
                            app:zjun_textSize="16px" />

                        <com.jancar.radio.widget.RuleView
                            android:id="@+id/gv_1_three"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            app:gv_b="true"
                            app:gv_currentValue="1098"
                            app:gv_d="false"
                            app:gv_gradationGap="14px"
                            app:gv_gradationUnit="34"
                            app:gv_longGradationLen="26px"
                            app:gv_maxValue="1812"
                            app:gv_minValue="418"
                            app:gv_numberPerCount="5"
                            app:gv_shortGradationLen="15px"
                            app:zjun_bgColor="#000"
                            app:zjun_textColor="#fff"
                            app:zjun_textSize="16px" />
                        <!--98.4-->
                        <com.jancar.radio.widget.RuleView
                            android:id="@+id/gv_1_four"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            app:gv_b="false"
                            app:gv_currentValue="97.2"
                            app:gv_d="false"
                            app:gv_gradationGap="14px"
                            app:gv_gradationUnit=" 0.6"
                            app:gv_longGradationLen="26px"
                            app:gv_maxValue="109.8"
                            app:gv_minValue="84.6"
                            app:gv_numberPerCount="5"
                            app:gv_shortGradationLen="15px"
                            app:zjun_bgColor="#000"
                            app:zjun_textColor="#fff"
                            app:zjun_textSize="16px" />

                    </FrameLayout>


                    <SeekBar
                        android:id="@+id/FMFreqSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom|center"
                        android:layout_marginLeft="14px"
                        android:layout_marginRight="35px"
                        android:max="205"
                        android:progress="0"
                        android:progressDrawable="@drawable/vertical_progress_transparent"
                        android:thumb="@mipmap/point"
                        android:thumbOffset="0.0px"
                        android:visibility="visible" />


                </FrameLayout>


            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight="1"
                    android:src="@mipmap/ic_not_collected"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/px10"
                    android:layout_marginBottom="@dimen/px10"
                    android:layout_width="2dp"
                    android:background="@color/gray"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_weight="1"
                    android:src="@mipmap/search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ListView
                android:divider="@null"
                android:id="@+id/list"
                android:paddingTop="@dimen/px15"
                android:paddingBottom="@dimen/px15"
                android:listSelector="@android:color/transparent"
                android:background="@mipmap/ic_bg_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
