<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_default_px77"
    android:id="@+id/llayout_wifi"
    android:orientation="vertical">

    <LinearLayout style="@style/llayout_item_child">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:text="sdfsf"
                android:id="@+id/WifiName"

                style="@style/style_title_txt" />

            <TextView
                android:id="@+id/txt_connect_state"
                style="@style/style_summary_txt"
        />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/WifiSignal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px11"
                android:gravity="center_vertical|end" />

            <TextView
                android:id="@+id/txt_operating"
                style="@style/txt_btn_normals"
                android:text="@string/wifi_text_connect" />
        </LinearLayout>

    </LinearLayout>

    <TextView style="@style/style_line_txt" />
</LinearLayout>
