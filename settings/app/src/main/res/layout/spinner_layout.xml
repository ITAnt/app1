<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_operating"
            android:text="@string/tab_sound_mode"
            style="@style/llayout_spinner_left"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/llayout_spinner_right"
            android:id="@+id/llayout_spinner_operating"
          >

            <TextView
                android:id="@+id/txt_spinner_operating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/px22"
                android:text="自定义"

                />
            <ImageView
                android:layout_marginRight="5px"
                android:src="@mipmap/img_arrow_bellow"
                android:layout_width="35px"
                android:layout_height="19px" />
        </LinearLayout>


        <ListView
            android:visibility="gone"
            android:id="@+id/spinner_operating_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/llayout_spinner_operating"
            android:layout_below="@+id/llayout_spinner_operating">

        </ListView>
    </RelativeLayout>


</FrameLayout>