<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_contact_synchronous_bg"
    android:orientation="vertical">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ip_bt_dail"
        android:hint="是否需要同步通讯录 ？"
        android:paddingLeft="5dp"
        android:textColor="#56575e"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_contact_dialog_yes"
            style="@style/txt_px18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_contact_synchronous_text"
            android:gravity="center"
            android:text="确认" />


        <TextView
            android:id="@+id/tv_contact_dialog_no"
            style="@style/txt_px18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="60dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_contact_synchronous_text"
            android:gravity="center"
            android:text="取消" />
    </LinearLayout>


</LinearLayout>